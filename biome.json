{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"nursery": { "useSortedClasses":{
				"level": "warn",
				"options": {
					"attributes": ["classList"],
					"functions": ["clsx", "tw"]
				}
			}}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"formatWithErrors": false
	}
}
